extends layout 

block content 
  div.container.px-5.py-5
    div.d-flex.flex-column.flex-gap-1.text-center.mb-4
      h1.text-capitalize #{title}: #{genre.name}
    //-   h2.text-capitalize.mb-4 
    div.d-flex.flex-column.flex-gap-1.align-items-center.text-center.mb-2
      if games.length 
        p.fs-5 #[em Delete or update the following games before attempting to delete this platform.]

        ul
          for game in games 
            li.fw-semibold.px-3.d-flex.mb-4
              a.fs-3.text-capitalize.fw-semibold.mb-3(href=game.url) #{game.title}
      else
        if errors
          ul.d-flex.justify-content-center.mb-4
            for error in errors
              li!= error.msg
        p.fs-5 Are you sure you want to delete this genre?

        

        div.d-flex.flex-column.flex-gap-1.text-center.w-100
          form(method='POST')
            div.form-group.d-flex.flex-gap-1.align-items-center.justify-content-center.mb-4
              input#password.form-control.form-control-lg.bg-dark.text-light.border-0.focus-ring.focus-ring-secondary(type='password', placeholder='Enter secret key' name='password' required value='' )
            div.form-group.d-flex.justify-content-center
              input#name.form-control.form-control-lg.bg-dark.text-light.border-0.focus-ring.focus-ring-secondary(type='hidden', name='genreid', value=genre._id )
            div.form-group.d-flex.justify-content-center
              button.btn.btn-danger.fs-5.fw-semibold(type='submit') Delete Genre

extends layout 

block content 
  div.container.px-5.py-5
    h1.text-center.mb-5 #{title}

    form(method='POST')
      div.form-group.d-flex.flex-gap-1.align-items-center.justify-content-center.mb-5.container-sm
         //- label.fw-medium(for='name') Name
         input#platform.form-control.form-control-lg.bg-dark.text-light.border-0.focus-ring.focus-ring-secondary(type='text', placeholder='Enter publisher name' name='name' required value=(undefined===publisher ? '' : publisher.name) )
      div.form-group.d-flex.justify-content-center
        button.btn.btn-light.fs-5.fw-semibold(type='submit') Submit 

    if errors 
      ul 
        for error in errors 
          li!= error.msg